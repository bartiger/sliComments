<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="BASIC">
		<field
			name="guest"
			type="radio"
			label="COM_COMMENTS_ENABLE_GUEST_LABEL"
			description="COM_COMMENTS_ENABLE_GUEST_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="ratings"
			type="radio"
			label="COM_COMMENTS_ENABLE_RATINGS_LABEL"
			description="COM_COMMENTS_ENABLE_RATINGS_DESC"
			default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
		</field>

		<field
			name="catid"
			type="category"
			extension="com_content"
			multiple="true"
			size="8"
			label="JCATEGORY"
			description="COM_COMMENTS_CATEGORY_DESC">
				<option value="">
						JOPTION_ALL_CATEGORIES
				</option>
		</field>

		<field
			name="include_child"
			type="radio"
			default="0"
			label="COM_COMMENTS_CATEGORY_INCLUDE_CHILD_LABEL"
			description="COM_COMMENTS_CATEGORY_INCLUDE_CHILD_DESC">
				<option value="1">
					COM_COMMENTS_CATEGORY_OPTION_INCLUDE_VALUE
				</option>
				<option value="0">
					COM_COMMENTS_CATEGORY_OPTION_EXCLUDE_VALUE
				</option>
		</field>
	</fieldset>

	<fieldset name="LAYOUT">
		<field
			name="form_position"
			type="list"
			label="COM_COMMENTS_FORM_POSITION_LABEL"
			description="COM_COMMENTS_FORM_POSITION_DESC"
			default="before">
				<option value="before">COM_COMMENTS_FORM_POSITION_OPTION_BEFORE</option>
				<option value="after">COM_COMMENTS_FORM_POSITION_OPTION_AFTER</option>
		</field>
		<field
			name="ordering"
			type="list"
			label="COM_COMMENTS_ORDERING_LABEL"
			description="COM_COMMENTS_ORDERING_DESC"
			default="DESC">
				<option value="DESC">COM_COMMENTS_ORDERING_OPTION_DESC</option>
				<option value="ASC">COM_COMMENTS_ORDERING_OPTION_ASC</option>
		</field>

		<field
			name="limit"
			type="integer"
			label="COM_COMMENTS_LIMIT_LABEL"
			description="COM_COMMENTS_LIMIT_DESC"
			default="20"
			first="5"
			last="100"
			step="5">
				<option value="0">JALL</option>
		</field>

	</fieldset>
</config>